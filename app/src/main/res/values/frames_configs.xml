<?xml version="1.0" encoding="utf-8"?>

<resources>

    <!--    Use old format?
    -       If you're coming from the previous Frames, then you will find this useful
    -       True means yes
    -       False means no
    -->
    <bool name="use_old_json_format">true</bool>

    <!-- Do you want notifications to be enabled for all your users?
    -       True means yes
    -       False means no
    -->
    <bool name="notifications_enabled_by_default">false</bool>

    <!--    Show collections tab?
    -       If you have collections in your JSON, set this to true
    -       Otherwise, set it to false (is the price you pay for not doing so :P )
    -->
    <bool name="show_collections_tab">true</bool>

    <!--    Configure your own Splash Screen style
    -       Only change the parent. Available Styles:
    -       LightTheme.SplashScreen
    -       DarkTheme.SplashScreen
    -       TransparentTheme.SplashScreen
    -       AmoledTheme.SplashScreen
    -->
    <style name="MySplashScreen" parent="LightTheme.SplashScreen" />

    <!--    Define the default app theme
    -       0 -> Light
    -       1 -> Dark
    -       2 -> Amoled
    -       3 -> Transparent
    -       4 -> Auto Light-Dark
    -       5 -> Auto Light-Amoled
    -->
    <integer name="default_theme">1</integer>

    <!--    Choose whether you want colored tiles by default -->
    <bool name="enable_colored_tiles">true</bool>

    <!--    Choose whether you want filled collection preview by default -->
    <bool name="enable_filled_collection_preview">true</bool>

    <!--    Show icons in tabs
    -       True means yes
    -       False means no
    -->
    <bool name="show_icons_in_tabs">true</bool>

    <!--    Show texts in tabs
    -       True means yes
    -       False means no
    -->
    <bool name="show_texts_in_tabs">false</bool>
    
    <!-- Use accent color in tabs
    -       True means yes
    -       False means no
    -->
    <bool name="accent_in_tabs">true</bool>

    <!--    These are your donation items. Only put their ids here -->
    <string-array name="donation_items">
        <item>com.minimalart.ab.coffee</item>
        <item>com.minimalart.ab.pancake</item>
        <item>com.minimalart.ab.abraod</item>
        <item>com.minimalart.ab.nintendo</item>
    </string-array>
</resources>